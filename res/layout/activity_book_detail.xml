<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
         >

        <TextView
            android:id="@+id/bookview_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bookview_title"
            android:layout_below="@+id/bookview_cover"
            android:layout_marginTop="39dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/bookview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookview_author"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="TextView" />

        <ImageView
            android:id="@+id/bookview_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/bookview_title"
            android:layout_marginLeft="34dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/bookview_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bookview_title"
            android:layout_below="@+id/bookview_title"
            android:text="TextView" />

        <TextView
            android:id="@+id/bookview_publishdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bookview_summary"
            android:layout_alignLeft="@+id/bookview_publisher"
            android:text="TextView" />

        <TextView
            android:id="@+id/bookview_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bookview_title"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/bookview_isbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bookview_publisher"
            android:layout_alignBottom="@+id/bookview_publisher"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/bookview_publisher"
            android:text="TextView" />

   
    </RelativeLayout>
    

</ScrollView>
